<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER"
      spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.csc311_assignment01_gettingstarted.AppController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <TextField fx:id="number1Field" promptText="Enter first number"/>
    <TextField fx:id="number2Field" promptText="Enter second number"/>

    <Button text="Calculate Sum" onAction="#onCalculateButtonClick"/>

    <Label fx:id="welcomeText" text="Enter numbers and click Calculate"/>

</VBox>